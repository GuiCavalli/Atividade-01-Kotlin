fun main() {
    val idade1: Int = 25
    val altura: Double = 1.75
    val nome: String = "Hariel"
    val eEstudante: Boolean = true
    val idade2: Int = 30
    val somaIdades: Int = idade1 + idade2
    val alturaDobrada: Double = altura * 2
    val saudacao: String = "Salve, $nome!"

    println("Idade: $idade1")
    println("Altura: $altura m")
    println("Nome: $nome")
    println("É estudante? $eEstudante")
    println("Soma de idades: $somaIdades")
    println("Altura dobrada: $alturaDobrada m")
    println("Saudação: $saudacao")

}
